# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://localhost:9000"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true

# LLM Configuration
# Provider can be "openai" or "anthropic"
LLM_PROVIDER=openai
# Optional: Override the default model for the provider
# LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# OpenAI Configuration (when using OpenAI provider)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORGANIZATION=

# Anthropic Configuration (when using Anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Redis Configuration (optional, for session/queue management)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=change-me-in-production

# Plugin Configuration
PLUGIN_DIRECTORY=src/plugins
PLUGIN_AUTO_RELOAD=true

# LinkedIn Integration
LINKEDIN_COOKIE=your-linkedin-cookie-here
LINKEDIN_EXTERNAL_SERVER_URL=http://linkedin-mcp:8080

# Environment
ENVIRONMENT=development 