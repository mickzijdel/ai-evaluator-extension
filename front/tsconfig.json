{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "sourceMap": true,
        "esModuleInterop": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "include": [
        "frontend/**/*.ts",
        "frontend/**/*.tsx",
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
